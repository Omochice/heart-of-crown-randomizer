{
  "name": "@heart-of-crown-randomizer/randomizer",
  "version": "1.0.0",
  "description": "Testable card randomization library with deterministic seeding",
  "keywords": [
    "randomizer",
    "shuffle",
    "seeded",
    "tdd",
    "heart-of-crown"
  ],
  "license": "Zlib",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "scripts": {
    "build": "tsdown",
    "check": "npm-run-all2 check:*",
    "check:code": "biome check .",
    "check:type": "tsc --noEmit",
    "clean": "rimraf dist",
    "fmt": "npm-run-all2 fmt:*",
    "fmt:biome": "biome format .",
    "fmt:package": "sort-package-json",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@fast-check/vitest": "catalog:",
    "@types/seedrandom": "^3.0.8",
    "npm-run-all2": "catalog:",
    "rimraf": "catalog:",
    "sort-package-json": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
