{
	"name": "@heart-of-crown-randomizer/site",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build-storybook": "storybook build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"fmt": "npm-run-all2 fmt:*",
		"fmt:package": "sort-package-json",
		"fmt:prettier": "prettier --write .",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"storybook": "storybook dev -p 6006",
		"test": "vitest run",
		"test:e2e": "playwright test"
	},
	"dependencies": {
		"@heart-of-crown-randomizer/card": "workspace:*",
		"@heart-of-crown-randomizer/randomizer": "workspace:*"
	},
	"devDependencies": {
		"@playwright/test": "1.57.0",
		"@storybook/addon-interactions": "8.6.14",
		"@storybook/addon-svelte-csf": "5.0.10",
		"@storybook/svelte": "10.1.11",
		"@storybook/sveltekit": "10.1.11",
		"@storybook/test": "8.6.15",
		"@sveltejs/adapter-auto": "7.0.0",
		"@sveltejs/kit": "2.49.4",
		"@sveltejs/vite-plugin-svelte": "6.2.4",
		"@tailwindcss/vite": "4.1.18",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/svelte": "5.3.1",
		"@types/node": "24.10.7",
		"jsdom": "27.4.0",
		"prettier": "3.7.4",
		"prettier-plugin-svelte": "3.4.1",
		"sort-package-json": "catalog:",
		"storybook": "10.1.11",
		"svelte": "5.46.1",
		"svelte-check": "4.3.5",
		"tailwindcss": "4.1.18",
		"vite": "7.3.1"
	}
}
